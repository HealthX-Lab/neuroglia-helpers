#!/bin/bash

host=`hostname`

name=neuroglia_interactive

if [ ${host:0:5} == "cedar" ]
then
	echo running on cedar
	if [ "$1" == "-Y" ] 
	then
		echo using visualization
		salloc -J $name --x11 -D `pwd` --time=3:00:00 --cpus-per-task=32 --ntasks=1 --mem=128000 --account=def-akhanf-ab
	else
		salloc -J $name  -D `pwd` --time=3:00:00 --cpus-per-task=32 --ntasks=1 --mem=128000 --account=def-akhanf-ab  
	fi
else

	echo "Please ssh to cedar.computecanada.ca before using $0"
	exit -1
fi

